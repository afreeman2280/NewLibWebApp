@page

@model NewLibWebApp.Models.UserViewModel

<h1>Register</h1>


@using (Html.BeginForm("Register", "User", FormMethod.Post))
{



    <div class="TextBoxPosition">
        <div>
            @Html.LabelFor(m => m.SingleUser.UserName)

            @Html.TextBoxFor(m => m.SingleUser.UserName, new { @class = "DivTextBoxPlaceMent" })
            @Html.ValidationMessageFor(m => m.SingleUser.UserName)
        </div>
        <div>
            @Html.LabelFor(m => m.SingleUser.password)

            @Html.PasswordFor(m => m.SingleUser.password, new { @class = "far fa-eye id=Password name=Password style=margin-left: -30px; cursor: pointer;data-toggle=password" })

            @Html.ValidationMessageFor(m => m.SingleUser.password)
        </div>
        <div>
            @Html.LabelFor(m => m.SingleUser.RoleId)
            @Html.TextBoxFor(m => m.SingleUser.RoleId, new { @class = "DivTextBoxPlaceMent" })
            @Html.ValidationMessageFor(m => m.SingleUser.RoleId)

        </div>
        <div>
            @Html.LabelFor(m => m.SingleUser.FirstName)

            @Html.TextBoxFor(m => m.SingleUser.FirstName, new { @class = "DivTextBoxPlaceMent" })
            @Html.ValidationMessageFor(m => m.SingleUser.FirstName)
        </div>
        <div>
            @Html.LabelFor(m => m.SingleUser.LastName)

            @Html.TextBoxFor(m => m.SingleUser.LastName, new { @class = "DivTextBoxPlaceMent" })
            @Html.ValidationMessageFor(m => m.SingleUser.LastName)
        </div>
        <div>
            @Html.LabelFor(m => m.SingleUser.Email)

            @Html.TextBoxFor(m => m.SingleUser.Email, new { @class = "DivTextBoxPlaceMent" })
            @Html.ValidationMessageFor(m => m.SingleUser.Email)
        </div>
        <input type="Submit" value="Submit" />
    </div>
 
}
